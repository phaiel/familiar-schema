{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://familiar.dev/schemas/payloads/ShuttlePayload.v1.schema.json",
  "title": "Ingestion Shuttle Payload",
  "description": "The state object that carries a WeaveUnit through the Heddle reconciliation pipeline.",
  "allOf": [{ "$ref": "../_base/BasePayload.schema.json" }],
  "schema_version": "1.0.0",
  "data": {
    "type": "object",
    "properties": {
      "parent_course_id": { "$ref": "../snippets/fields/EntityId.json" },
      "active_weave_unit": { "$ref": "./WeaveUnitPayload.schema.json" },
      "structural_reconciliation": { "$ref": "./ReconciliationResultPayload.schema.json" },
      "emotional_reconciliation": { "$ref": "./ReconciliationResultPayload.schema.json" },
      "identity_reconciliation": { "$ref": "./ReconciliationResultPayload.schema.json" },
      "is_ready_for_creation": { "type": "boolean", "default": false }
    },
    "required": ["parent_course_id", "active_weave_unit"]
  }
}