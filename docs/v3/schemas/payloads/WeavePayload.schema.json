{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://familiar.dev/schemas/payloads/WeavePayload.v1.schema.json",
  "title": "Weave Payload",
  "description": "Represents a complete, raw text input from a user, ready for ingestion.",
  "allOf": [{ "$ref": "../_base/BasePayload.schema.json" }],
  "schema_version": "1.0.0",
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "text_content": { "type": "string" },
        "source_type": { "$ref": "../snippets/types/classification/WeaveType.json" }
      },
      "required": ["text_content", "source_type"]
    }
  }
}