{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://familiar.dev/schemas/entities/Bond.v1.schema.json",
  "title": "Bond Entity",
  "description": "A classical entity representing a persistent relationship between two Thread entities.",
  "allOf": [{ "$ref": "./_base/BaseCognitiveEntity.schema.json" }],
  "properties": {
    "entity_type": { "const": "Bond" },
    "thread_a_id": { "$ref": "../snippets/fields/EntityId.json" },
    "thread_b_id": { "$ref": "../snippets/fields/EntityId.json" },
    "components": {
      "type": "object",
      "properties": {
        "content": { "$ref": "../components/BondContent.schema.json" },
        "permissions": { "$ref": "../components/BondPermissions.schema.json" },
        "physics_config": { "$ref": "../components/BondPhysicsConfig.schema.json" }
      },
      "required": ["content", "permissions", "physics_config"]
    },
    "physics_state": {
      "type": "object",
      "properties": {
        "universal": { "$ref": "../components/UniversalPhysicsState.schema.json" },
        "tension": { "$ref": "../components/BondTensionComponent.schema.json" }
      },
      "required": ["universal", "tension"]
    }
  },
  "required": ["thread_a_id", "thread_b_id", "components", "physics_state"]
}