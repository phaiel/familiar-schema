{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://familiar.dev/schemas/entities/tenant.v1.schema.json",
  "title": "Tenant Entity",
  "description": "Canonical schema for a Tenant, the root container for all user data and configuration. This is a System Entity and does not participate in physics simulations.",
  "type": "object",
  "allOf": [{ "$ref": "./_base/BaseSystemEntity.schema.json" }],
  "properties": {
    "entity_type": {
      "const": "Tenant"
    },
    "components": {
      "type": "object",
      "properties": {
        "identity": { "$ref": "../components/TenantIdentity.schema.json" },
        "members": { "$ref": "../components/TenantMembers.schema.json" },
        "config": { "$ref": "../components/TenantConfig.schema.json" }
      },
      "required": ["identity", "members", "config"]
    }
  },
  "required": ["components"]
}