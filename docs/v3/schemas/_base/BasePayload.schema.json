{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://familiar.dev/schemas/base/Payload.v1.schema.json",
  "title": "Base Event Payload",
  "description": "The base schema for all event payloads, ensuring they contain essential context.",
  "type": "object",
  "allOf": [{ "$ref": "./BaseMetadata.schema.json" }],
  "schema_version": "1.1.0",
  "properties": {
    "user_context": {
      "type": "object",
      "properties": {
        "user_id": { "$ref": "../snippets/fields/UserId.json" },
        "session_id": { "$ref": "../snippets/fields/EntityId.json" }
      },
      "required": ["user_id"]
    }
  },
  "required": ["user_context", "data"]
}